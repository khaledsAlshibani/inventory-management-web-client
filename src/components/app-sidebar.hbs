<aside class="app-sidebar" data-app-sidebar>
	<div class="app-sidebar__header">
		<a href="dashboard.html">
			<img src="{{logo}}" alt="{{logoAlt}}" class="app-sidebar__logo" />
		</a>
		{{> sidebar-toggler}}
	</div>

	<nav class="app-sidebar__nav">
		<ul class="app-sidebar__nav-menu">
			{{#each navLinks}}
				<li>
					<a class="app-sidebar__nav-item" href="{{this.link}}">
						<i
							class="app-sidebar__nav-item-icon icon-{{this.icon}}"
							aria-hidden="true"
						></i>
						{{this.label}}
					</a>
				</li>
			{{/each}}
		</ul>
		<ul class="app-sidebar__nav-menu app-sidebar__nav-menu--secondary">
			{{#each secondaryNavLinks}}
				<li>
					<a class="app-sidebar__nav-item" href="{{this.link}}">
						<i
							class="app-sidebar__nav-item-icon icon-{{this.icon}}"
							aria-hidden="true"
						></i>
						{{this.label}}
					</a>
				</li>
			{{/each}}
		</ul>
	</nav>
</aside>