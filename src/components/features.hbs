    <div class="container">
        <div class="section__content">
            {{> section-heading
                title="Built to Make Your Life Easier"
            }}

            <div class="features grid cols-3">
                <div class="features__card">
                    <img class="features__card-image" src="assets/images/bag.png" alt="Inventory Tracking - Inveit">
                    <div class="features__card-content">
                        <h3 class="features__card-title">Inventory Tracking</h3>
                        <p class="features__card-description">Easily monitor stock levels and stay on top of your inventory.</p>
                    </div>
                </div>

                <div class="features__card">
                    <img class="features__card-image" src="assets/images/time.png" alt="Real-Time Updates - Inveit">
                    <div class="features__card-content">
