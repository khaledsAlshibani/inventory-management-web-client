<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{{title}}</title>
        <link rel="stylesheet" href="css/style.css" />
    </head>

    <body>
        <main class="page page--hasSidebar">
            {{> app-sidebar
                logo=logo
                logoAlt=logoAlt
                navLinks=navLinks
            }}
            
            <div class="page__content">
					{{> app-navbar
						title=navTitle
						searchId=navSearchId
						searchName=navSearchName
						searchValue=navSearchValue
						searchPlaceholder=navSearchPlaceholder
						searchClass=navSearchClass
						userPhoto=navUserPhoto
						userPhotoAlt=navUserPhotoAlt
					}}
                <div class="container container--page container--page-padding">
                    <div class="grid cols-4">
                        {{#each statistics}}
                            {{> statistic-card
                                iconName=this.iconName
                                title=this.title
                                value=this.value
                            }}
                        {{/each}}
                    </div>
                    <div class="charts">
                        <canvas data-sells-chart></canvas>
                        <canvas data-revenue-chart></canvas>
                    </div>
                </div>
            </div>
        </main>

        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script src="js/dashboard.js"></script>
    </body>
</html>
