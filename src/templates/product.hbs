<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{{title}}</title>
        <link rel="icon" type="image/x-icon" href="/favicon.ico">
        <link rel="stylesheet" href="css/style.css" />
    </head>

    <body>
        <main class="page page--hasSidebar">
            {{> app-sidebar
                logo=logo
                logoAlt=logoAlt
                navLinks=navLinks
            }}
            
            <div class="page__content">
				{{> app-navbar
					title=navTitle
					searchId=navSearchId
					searchName=navSearchName
					searchValue=navSearchValue
					searchPlaceholder=navSearchPlaceholder
					searchClass=navSearchClass
					userPhoto=navUserPhoto
					userPhotoAlt=navUserPhotoAlt
				}}
                <div class="container container--page container--page-padding">
                    <section class="panel">
                        <header class="panel__header">
                            <h2 class="panel__header-title">Add New Product</h2>
                        </header>

                        <div class="panel__body panel__body--hasPadding" data-single-product>
                            <form class="page-form">
                                <div class="page-form__section page-form__inputs" data-product-inputs>
                                    {{!-- Elements Will be rendered from JS --}}
                                </div>
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </main>

        
        <script src="js/views/product.mjs" type="module"></script>
        <script src="js/index.mjs" type="module"></script>
        <script src="js/app.js"></script>
    </body>
</html>